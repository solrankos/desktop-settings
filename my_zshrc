# Prompt
echo "export CLICOLOR=1" >> ~/.zshrc
echo "export LSCOLORS=xfFxCxDxBxegedabagaced" >> ~/.zshrc
PS1="%F{green}%n%F{white} at %F{green}%m %F{white}in %F{cyan}%1/ %F{white}%# %F{default}"

# Aliases
alias clr="clear"
alias rc="vim ~/.zshrc"
alias myrc="vim ~/workspace/desktop-settings/my_zshrc"
alias ..="cd .."
alias ls="ls -A --color"
alias ll="ls -lhA --color"
alias dietpi="ssh dietpi@192.168.1.100"
alias linode="ssh oscar@139.144.189.205 -p 39"

export LANG=en_US.UTF-8
